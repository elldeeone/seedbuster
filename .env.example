# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id

# Detection Thresholds
DOMAIN_SCORE_THRESHOLD=30
ANALYSIS_SCORE_THRESHOLD=70

PHISHTANK_API_KEY=

# External Intelligence (optional, improves detection)
VIRUSTOTAL_API_KEY=
URLSCAN_API_KEY=
# Optional: submit fresh urlscan.io scans when cloaking is suspected/confirmed
URLSCAN_SUBMIT_ENABLED=false
URLSCAN_SUBMIT_VISIBILITY=unlisted

# Search discovery (optional, uses official APIs; avoids scraping Google SERPs)
SEARCH_DISCOVERY_ENABLED=false
# Provider: google | bing
SEARCH_DISCOVERY_PROVIDER=google
SEARCH_DISCOVERY_QUERIES=kaspa wallet;kaspa recover wallet;kaspa seed phrase
SEARCH_DISCOVERY_INTERVAL_MINUTES=60
SEARCH_DISCOVERY_RESULTS_PER_QUERY=20
# If true, rotates through result pages (start=1,21,41,...) to discover new results over time.
SEARCH_DISCOVERY_ROTATE_PAGES=true
# If true, bypasses DOMAIN_SCORE_THRESHOLD for search hits (more coverage, more noise)
SEARCH_DISCOVERY_FORCE_ANALYZE=false
# Comma-separated domains to skip (forums/social/video/etc). SeedBuster already excludes common ones by default.
# Add your own if you see noise, e.g. "reddit.com,quora.com".
SEARCH_DISCOVERY_EXCLUDE_DOMAINS=

# Google Programmable Search Engine (Custom Search JSON API)
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ID=
GOOGLE_CSE_GL=
GOOGLE_CSE_HL=en

# Bing Web Search API (Azure Cognitive Services)
BING_SEARCH_API_KEY=
BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/search
BING_SEARCH_MARKET=en-US

# Reporting Options
REPORT_REQUIRE_APPROVAL=true
REPORT_MIN_SCORE=80
# Comma-separated list: google,cloudflare,netcraft,resend,phishtank,smtp,digitalocean,hosting_provider,registrar,apwg
# Tip: add `hosting_provider` to get manual abuse-destination instructions even without Resend/SMTP.
# Tip: add `registrar` to get RDAP-based registrar abuse contact + copy/paste template.
# Tip: add `apwg` to generate instructions for submitting to reportphishing@apwg.org (APWG).
REPORT_PLATFORMS=google,cloudflare,netcraft,resend

# Resend (email reporter - optional)
RESEND_API_KEY=
RESEND_FROM_EMAIL=SeedBuster <onboarding@resend.dev>

# SMTP (email reporter - optional alternative to Resend)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Operational Limits
ANALYSIS_TIMEOUT=30
MAX_CONCURRENT_ANALYSES=3

# Paths (defaults work for Docker)
DATA_DIR=./data
EVIDENCE_DIR=./data/evidence
CONFIG_DIR=./config
